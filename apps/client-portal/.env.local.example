# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8000

# Monday.com App Configuration
NEXT_PUBLIC_MONDAY_CLIENT_ID=your_client_id_here
MONDAY_CLIENT_SECRET=your_client_secret_here
MONDAY_SIGNING_SECRET=your_signing_secret_here
NEXT_PUBLIC_MONDAY_APP_ID=your_app_id_here

# Monday.com API Token
NEXT_PUBLIC_MONDAY_API_TOKEN=your_monday_api_token_here

# Monday.com Board IDs (update these with your actual board IDs)
NEXT_PUBLIC_TICKET_BOARD_ID=your_ticket_board_id
NEXT_PUBLIC_COMPANY_BOARD_ID=your_company_board_id
NEXT_PUBLIC_USER_BOARD_ID=your_user_board_id
NEXT_PUBLIC_SERVICE_PROVIDER_BOARD_ID=your_service_provider_board_id

# For production, use your actual domain:
# NEXT_PUBLIC_API_URL=https://api.redsis.com
# NEXT_PUBLIC_WEBSOCKET_URL=wss://api.redsis.com